{% extends "layout.stencil" %}

{% block content %}
<div class="rides-wrapper">
    {% for ride in rides %}
    <div class="ride">
        <h1>{{ ride.date }}: {{ ride.title }}</h1>
        <h2>{{ ride.time }} Rollout • Meet at {{ ride.location }} • {{ ride.distance }} {{ ride.elevation }} • {{ ride.difficulty }}</h2>
        <p>{{ ride.description }}</p>
        <img src="/assets/img/{{ ride.imageName }}">
    </div>
    {% endfor %}
</div>
{% endblock %}
